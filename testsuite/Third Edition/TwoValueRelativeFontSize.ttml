<?xml version="1.0" encoding="UTF-8"?>
<tt:tt xmlns:tt="http://www.w3.org/ns/ttml" xmlns:ttp="http://www.w3.org/ns/ttml#parameter" xmlns="http://www.w3.org/ns/ttml" xmlns:tts="http://www.w3.org/ns/ttml#styling" xmlns:ttm="http://www.w3.org/ns/ttml#metadata" ttp:profile="http://www.w3.org/ns/ttml/profile/imsc1/text" xml:lang="en" ttp:cellResolution="30 15">
  <head>
    <metadata> 
      <ttm:desc>Test two value relative font sizes</ttm:desc>
    </metadata>
    <layout>
       <region xml:id="r1" tts:backgroundColor="black"/>
    </layout>
  </head>
  <body>
    <div region="r1">
      <p tts:fontSize="1c">
      <span tts:fontSize="1em">Normal text</span><br/>
      <span tts:fontSize="1em 1em">Narrow text</span><br/>
      <span tts:fontSize="1c">Normal text</span><br/>
      <span tts:fontSize="1c 1c">Narrow text</span>
      </p>
    </div>
  </body>
</tt:tt>