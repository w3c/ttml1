<?xml version="1.0" encoding="UTF-8"?>
<tt:tt xmlns:tt="http://www.w3.org/ns/ttml" xmlns:ttp="http://www.w3.org/ns/ttml#parameter" xmlns="http://www.w3.org/ns/ttml" xmlns:tts="http://www.w3.org/ns/ttml#styling" xmlns:ttm="http://www.w3.org/ns/ttml#metadata" ttp:profile="http://www.w3.org/ns/ttml/profile/imsc1/text" xml:lang="en">
  <head>
    <metadata>
      <ttm:desc>Span with only text nodes implicit duration</ttm:desc>
    </metadata>
  </head>
  <body>
    <div>
      <p begin="0s" end="1s" timeContainer="seq" tts:backgroundColor="blue">
        <span>No text should be displayed.</span>
      </p>
    </div>
    <div>
      <p begin="0s" end="1s" tts:backgroundColor="blue">
        <span>Text should displayed.</span>
      </p>
    </div>
  </body>
</tt:tt>